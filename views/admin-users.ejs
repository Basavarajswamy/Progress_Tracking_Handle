<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Users</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #121212;
      color: #ffffff;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #1e1e1e;
      padding: 20px;
      text-align: center;
      border-bottom: 3px solid #4caf50;
    }

    header h1 {
      margin: 0;
      font-size: 2.5rem;
    }

    .container {
      max-width: 800px;
      margin: 30px auto;
      padding: 20px;
      background-color: #1e1e1e;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    h2 {
      color: #4caf50;
      text-align: center;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    table,
    th,
    td {
      border: 1px solid #333;
    }

    th,
    td {
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: #333;
    }

    tr:nth-child(even) {
      background-color: #1e1e1e;
    }

    .home-icon {
      position: absolute;
      top: 20px;
      left: 20px;
      font-size: 2rem;
      color: #4caf50;
      cursor: pointer;
      text-decoration: none;
    }
  </style>
</head>

<body>
  <a href="/" class="home-icon">üè†</a>
  <header>
    <h1>Admin Users</h1>
  </header>

  <div class="container">
    <h2>All Users</h2>
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user=> { %>
          <tr>
            <td>
              <%= user.username %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.role %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>

    <h2>Promote User to Admin</h2>
    <form action="/admin/promote" method="POST">
      <label for="email">User Email:</label>
      <input type="email" id="email" name="email" required>
      <button type="submit">Promote</button>
    </form>

    <h2>Demote Admin to User</h2>
    <form action="/admin/demote" method="POST">
      <label for="email">User Email:</label>
      <input type="email" id="email" name="email" required>
      <button type="submit">Demote</button>
    </form>
  </div>
