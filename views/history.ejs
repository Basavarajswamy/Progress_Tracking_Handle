<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress History</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #1e1e1e;
            padding: 20px;
            text-align: center;
            border-bottom: 3px solid #4caf50;
        }

        header h1 {
            margin: 0;
            font-size: 2.5rem;
        }

        .container {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            background-color: #1e1e1e;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        }

        h2 {
            color: #4caf50;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table,
        th,
        td {
            border: 1px solid #333;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #333;
        }

        tr:nth-child(even) {
            background-color: #1e1e1e;
        }

        .delete-button {
            background-color: #ff4d4d;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }

        .delete-button:hover {
            background-color: #ff1a1a;
        }
        
        .progress-button {
            background-color: #4caf50;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
            display: block;
            text-align: center;
            margin: 20px 0;
        }

        .progress-button:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }

    </style>
</head>

<body>
    <header>
        <h1>Progress History</h1>
    </header>

    <div class="container">
        <h2>
            <%= userRole==="Admin" ? "All Users' Progress" : "Your Progress" %>
        </h2>
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Task</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% progresses.forEach(progress=> { %>
                    <tr>
                        <td>
                            <%= progress.user %>
                        </td>
                        <td>
                            <%= progress.task %>
                        </td>
                        <td>
                            <%= progress.completed ? "Completed" : "Pending" %>
                        </td>
                        <td>
                            <form action="/progress/delete/<%= progress._id %>" method="POST" style="display:inline;">
                                <button type="submit" class="delete-button">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <!-- //Button to redirect to progress page -->
        <a href="/progress/add" class="progress-button">Go Back to Progress Page</a>

    </div>
</body>

</html> 